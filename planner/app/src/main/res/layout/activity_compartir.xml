<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#202732"
    tools:context="com.alvaro.tfg.compartir">

    <ImageButton
        android:id="@+id/share3"
        android:layout_width="112dp"
        android:layout_height="99dp"
        android:background="#202732"
        android:onClick="share_plan"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@android:drawable/ic_dialog_email" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginBottom="64dp"
        android:text="SHARE"
        android:textColor="#E1D6D6"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/text"
        app:layout_constraintStart_toStartOf="@+id/share3"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="110dp"
        android:fontFamily="sans-serif"
        android:text="Plan successfully created"
        android:textColor="#179576"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="214dp"
        android:layout_height="0dp"
        android:layout_marginBottom="119dp"
        android:gravity="center"
        android:text="Let your friends know about your next plan"
        android:textColor="#E1D6D6"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <Button
        android:id="@+id/salir"
        android:layout_width="230dp"
        android:layout_height="0dp"
        android:layout_marginBottom="76dp"
        android:background="@drawable/button_rounded_border"
        android:onClick="planes"
        android:text="MY PLANS"
        android:textColor="#E1D6D6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/otro" />

    <Button
        android:id="@+id/otro"
        android:layout_width="230dp"
        android:layout_height="0dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_rounded"
        android:onClick="anotherPlan"
        android:text="ANOTHER PLAN"
        android:textColor="#E1D6D6"
        app:layout_constraintBottom_toTopOf="@+id/salir"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text" />

    <TextView
        android:id="@+id/text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="68dp"
        android:layout_marginLeft="68dp"
        android:layout_marginEnd="68dp"
        android:layout_marginRight="68dp"
        android:layout_marginBottom="48dp"
        android:gravity="center"
        android:text="If you do not want to share your plan, you can create another one or exit the app "
        android:textColor="#E1D6D6"
        app:layout_constraintBottom_toTopOf="@+id/otro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

</androidx.constraintlayout.widget.ConstraintLayout>