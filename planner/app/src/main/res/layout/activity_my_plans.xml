<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#202732"
    tools:context="com.alvaro.tfg.my_plans">

    <TextView
        android:id="@+id/title"
        android:layout_width="225dp"
        android:layout_height="43dp"
        android:layout_marginTop="58dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="My plans"
        android:textColor="#179576"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tvEdit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvEdit"
        android:layout_width="168dp"
        android:layout_height="35dp"
        android:layout_marginBottom="31dp"
        android:gravity="center"
        android:text="Choose a plan for edit"
        android:textColor="#E1D6D6"
        app:layout_constraintBottom_toTopOf="@+id/lv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <ListView
        android:id="@+id/lv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="23dp"
        android:layout_marginLeft="23dp"
        android:layout_marginEnd="23dp"
        android:layout_marginRight="23dp"
        android:layout_marginBottom="28dp"
        android:background="#179576"
        app:layout_constraintBottom_toTopOf="@+id/otro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvEdit" />

    <Button
        android:id="@+id/otro"
        android:layout_width="227dp"
        android:layout_height="74dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/button_rounded_border"
        android:onClick="anotherPlan"
        android:text="NEW PLAN"
        android:textColor="#E1D6D6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lv" />

</androidx.constraintlayout.widget.ConstraintLayout>