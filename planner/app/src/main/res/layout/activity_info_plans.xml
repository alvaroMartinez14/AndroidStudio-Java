<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#202732"
    tools:context=".principal">

    <TextView
        android:id="@+id/title"
        android:layout_width="209dp"
        android:layout_height="51dp"
        android:layout_marginTop="75dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="Plan"
        android:textColor="#179576"
        android:textSize="36sp"
        android:textStyle="bold"
        ads:layout_constraintBottom_toTopOf="@+id/inf1"
        ads:layout_constraintEnd_toEndOf="parent"
        ads:layout_constraintStart_toStartOf="parent"
        ads:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/inf1"
        android:layout_width="183dp"
        android:layout_height="47dp"
        android:layout_marginBottom="35dp"
        android:gravity="center"
        android:text="This is the information about your plan"
        android:textColor="#E1D6D6"
        ads:layout_constraintBottom_toTopOf="@+id/res"
        ads:layout_constraintEnd_toEndOf="parent"
        ads:layout_constraintStart_toStartOf="parent"
        ads:layout_constraintTop_toBottomOf="@+id/title" />

    <TextView
        android:id="@+id/res"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="27dp"
        android:layout_marginLeft="27dp"
        android:layout_marginEnd="27dp"
        android:layout_marginRight="27dp"
        android:layout_marginBottom="28dp"
        android:gravity="center"
        android:textColor="#E1D6D6"
        android:textSize="18sp"
        ads:layout_constraintBottom_toTopOf="@+id/ed"
        ads:layout_constraintEnd_toEndOf="parent"
        ads:layout_constraintStart_toStartOf="parent"
        ads:layout_constraintTop_toBottomOf="@+id/inf1" />

    <Button
        android:id="@+id/ed"
        android:layout_width="193dp"
        android:layout_height="54dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/button_rounded"
        android:onClick="edit_plan"
        android:text="EDIT"
        android:textColor="#E1D6D6"
        ads:layout_constraintBottom_toTopOf="@+id/de"
        ads:layout_constraintEnd_toEndOf="parent"
        ads:layout_constraintStart_toStartOf="parent"
        ads:layout_constraintTop_toBottomOf="@+id/res" />

    <Button
        android:id="@+id/de"
        android:layout_width="194dp"
        android:layout_height="59dp"
        android:layout_marginBottom="72dp"
        android:background="@drawable/button_rounded_border"
        android:onClick="delete_plan"
        android:text="DELETE"
        android:textColor="#E1D6D6"
        ads:layout_constraintBottom_toBottomOf="parent"
        ads:layout_constraintEnd_toEndOf="parent"
        ads:layout_constraintStart_toStartOf="parent"
        ads:layout_constraintTop_toBottomOf="@+id/ed" />

</androidx.constraintlayout.widget.ConstraintLayout>
